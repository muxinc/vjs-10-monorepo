{
  "name": "@vjs-10/vjs-compiler",
  "type": "module",
  "version": "0.1.0",
  "description": "Multi-target compiler for Video.js 10 components - transforms React/JSX to various output formats",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "vjs-compiler": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc --project tsconfig.v1.json",
    "build:v1": "tsc --project tsconfig.v1.json",
    "build:v2": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --project tsconfig.v1.json --watch",
    "dev:v1": "tsc --project tsconfig.v1.json --watch",
    "dev:v2": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:v1": "vitest run --config vitest.config.v1.ts",
    "test:v2": "vitest run",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "validate:output": "tsx scripts/validate-output.ts"
  },
  "dependencies": {
    "@babel/generator": "^7.26.3",
    "@babel/parser": "^7.26.3",
    "@babel/traverse": "^7.26.5",
    "@babel/types": "^7.26.3",
    "@tailwindcss/postcss": "4.1.13",
    "postcss": "^8.5.6",
    "postcss-nested": "^6.2.0",
    "postcss-selector-parser": "^7.1.0",
    "postcss-value-parser": "^4.2.0",
    "tailwindcss": "4.1.13"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "@types/babel__generator": "^7.6.8",
    "@types/babel__traverse": "^7.20.6",
    "@types/node": "^22.10.5",
    "html-validate": "^8.24.1",
    "playwright": "^1.56.0",
    "typescript": "^5.4.0",
    "vite": "^7.1.6",
    "vitest": "^3.0.0"
  }
}
