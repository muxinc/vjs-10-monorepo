---
import type { HTMLTag, Polymorphic } from 'astro/types';
import { clsx } from 'clsx';
import { twMerge } from 'tailwind-merge';

type Props<Tag extends HTMLTag = 'h2'> = Polymorphic<{ as: Tag }> & {
  maxWidth?: boolean;
  class?: string;
};

const { as: Tag = 'h2', maxWidth = true, class: className, ...props } = Astro.props;
---

<Tag
  class={twMerge(clsx('text-h4 @lg:text-h3 @3xl:text-h2 mb-6 mt-18', maxWidth && 'max-w-3xl mx-auto'), className)}
  {...props}
>
  <slot />
</Tag>
