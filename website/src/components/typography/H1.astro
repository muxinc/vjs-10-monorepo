---
import type { HTMLTag, Polymorphic } from 'astro/types';
import { clsx } from 'clsx';
import { twMerge } from 'tailwind-merge';

type Props<Tag extends HTMLTag = 'h1'> = Polymorphic<{ as: Tag }> & {
  maxWidth?: boolean;
  class?: string;
};

const { as: Tag = 'h1', maxWidth = true, class: className, ...props } = Astro.props;
---

<Tag class={twMerge(clsx('text-h1 mb-6', maxWidth && 'max-w-3xl mx-auto'), className)} {...props}>
  <slot />
</Tag>
